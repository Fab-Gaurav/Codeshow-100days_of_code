#include <iostream>
using namespace std;

int main() {
    int t;
    cin>>t;
    while(t--)
    {
        long int count=0;
        string s;
        cin>>s;
        for(int i=0;i<s.size();i++)
        {
         if(s[i]!=s[i+1])
         {
             count++;
         }
         
        }
        cout<<count/2<<endl;
    }
	return 0;
}
