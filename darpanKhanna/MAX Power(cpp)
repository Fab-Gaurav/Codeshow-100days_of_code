#include <bits/stdc++.h>
using namespace std;

int main()
{
    long n;
    cin>>n;
    string s;
    cin>>s; 
    int ans=0;
    for(long i=s.length()-1;i>=0;i++)
    {
        if(s[i]=='0')
        ans++;
        else
        {
            cout<<ans<<endl;
            break;
        }
    }

    return 0;
}
