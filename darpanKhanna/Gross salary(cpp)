#include <iostream>

using namespace std;

int main()
{
    int n,bs,gs,hra,da;
    cin>>n;
    while(n--){
        cin>>bs;
        if(bs<1500){
            hra=0.1*bs;
            da=0.9*bs;
            gs=bs+hra+da;
            cout<<gs<<endl;
        }
        else if(bs>=1500){
            hra=500;
            da=0.98*bs;
            gs=bs+hra+da;
            cout<<gs<<endl;
        }
    }
}
